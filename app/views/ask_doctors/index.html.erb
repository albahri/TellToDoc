<p id="notice"><%= notice %></p>
<%= form_tag(ask_doctors_path, :method => "get", id:"search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search questions By title" %>
<%= submit_tag "Search" %>
<% end %>

<h1>Listing Ask Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ask_doctors.each do |ask_doctor| %>
      <tr>
        <td><%= ask_doctor.name %></td>
        <td><%= ask_doctor.title %></td>
        <td><%= ask_doctor.description %></td>
        <td><%= link_to 'Show', ask_doctor %></td>
        <td><%= link_to 'Edit', edit_ask_doctor_path(ask_doctor) %></td>
        <td><%= link_to 'Destroy', ask_doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ask doctor', new_ask_doctor_path %>
